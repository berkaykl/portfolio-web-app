@using EntityLayer.Concrete
@model List<Skill>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeteneklerim</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Oran</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    @item.Title
                                </td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                                <td>
                                    <form asp-controller="Skill" asp-action="DeleteSkill" asp-route-id="@item.SkillID" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-outline-danger">Sil</button>
                                    </form>
                                </td>
                                <td><a asp-controller="Skill" asp-action="EditSkill" asp-route-id="@item.SkillID" class="btn btn-outline-warning">Düzenle</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a class="btn btn-outline-success" asp-controller="Skill" asp-action="AddSkill">Yeni Proje Ekle</a>
        </div>
    </div>
</div>
<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>
