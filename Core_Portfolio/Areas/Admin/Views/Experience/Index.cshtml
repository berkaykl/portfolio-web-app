@using EntityLayer.Concrete
@model List<Experience>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimlerim</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Açıklama</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ExperienceID</td>
                                <td>@item.Name</td>
                                <td>@item.Date</td>
                                <td style="word-wrap: break-word; white-space: normal; max-width: 250px;">@item.Description</td>
                                <td>
                                    <form asp-area="Admin" asp-controller="Experience" asp-action="DeleteExperience" asp-route-id="@item.ExperienceID" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-outline-danger">Sil</button>
                                    </form>
                                </td>
                                <td><a asp-area="Admin" asp-controller="Experience" asp-action="EditExperience" asp-route-id="@item.ExperienceID" class="btn btn-outline-warning">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a class="btn btn-outline-success" asp-area="Admin" asp-controller="Experience" asp-action="AddExperience">Yeni Deneyim Ekle</a>
        </div>
    </div>
</div>
<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>