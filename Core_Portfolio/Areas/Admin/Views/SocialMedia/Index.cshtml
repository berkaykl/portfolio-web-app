@using EntityLayer.Concrete
@model List<SocialMedia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sosyal Medya Hesaplarım</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>İsim</th>
                            <th>Url</th>
                            <th>Icon</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SocialMediaID</td>
                                <td>@item.Name</td>
                                <td>@item.Url</td>
                                <td><i class="@item.Icon"></i> (@item.Icon)</td>
                                <td>
                                    <form asp-area="Admin" asp-controller="SocialMedia" asp-action="DeleteSocialMedia" asp-route-id="@item.SocialMediaID" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-outline-danger">Sil</button>
                                    </form>
                                </td>
                                <td><a asp-area="Admin" asp-controller="SocialMedia" asp-action="EditSocialMedia" asp-route-id="@item.SocialMediaID" class="btn btn-outline-warning">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a class="btn btn-outline-success" asp-area="Admin" asp-controller="SocialMedia" asp-action="AddSocialMedia">Yeni Hesap Ekle</a>
        </div>
    </div>
</div>
<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>

