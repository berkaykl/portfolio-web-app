@using EntityLayer.Concrete
@model List<Portfolio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Projelerim</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Proje</th>
                            <th>Tarih</th>
                            <th>Tamamlanma Durumu</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@item.IconUrl" alt="image" />
                                    <span style="margin-left: 10px;">@item.Name</span>
                                </td>
                                <td>@item.Date</td>

                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: @item.ProjectValue%" aria-valuenow="@item.ProjectValue" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                                <td>
                                    <form asp-area="Admin" asp-controller="Portfolio" asp-action="DeletePortfolio" asp-route-id="@item.PortfolioID" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-outline-danger">Sil</button>
                                    </form>
                                </td>
                                <td><a asp-area="Admin" asp-controller="Portfolio" asp-action="EditPortfolio" asp-route-id="@item.PortfolioID" class="btn btn-outline-warning">Düzenle</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a class="btn btn-outline-success" asp-area="Admin" asp-controller="Portfolio" asp-action="AddPortfolio">Yeni Proje Ekle</a>
        </div>
    </div>
</div>
<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>